#Packages in one command
sudo apt-get install  ros-kinetic-joy ros-kinetic-serial ros-kinetic-imu-filter-madgwick ros-kinetic-phidgets-imu ros-kinetic-phidgets-drivers ros-kinetic-phidgets-api

sudo apt-get install ros-kinetic-usb-cam ros-kinetic-cv-bridge ros-kinetic-costmap-2d ros-kinetic-image-proc ros-kinetic-image-view 

sudo apt-get install libusb-1.0-0-dev #delete build and devel after installing this, then redo catkin_make

#phidgets imu setup
roscd phidgets_api
sudo chmod +x setup-udev.sh
sudo ./setup-udev.sh
